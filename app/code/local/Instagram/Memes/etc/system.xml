<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <instagram_tab translate="label" module="instagram">
            <label>Instagram</label>
            <sort_order>420</sort_order>
        </instagram_tab>
    </tabs>

	<sections>
		<instagram translate="label" module="instagram">
			<tab>instagram_tab</tab>
            <label>Instagram settings</label>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
                <instagram_settings translate="label" module="instagram">
                    <label>Instagram Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<instagram_module_enabled translate="label">
                            <label>Enable/Disable Instagram Module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>instagram/options</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </instagram_module_enabled>

                        <instagram_username_id translate="label">
                        	<label>Your Instagram Username</label>
                        	<frontend_type>text</frontend_type>
                        	<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </instagram_username_id>
                    </fields>
                </instagram_settings>
            </groups>
		</instagram>
	</sections>
</config>

                     